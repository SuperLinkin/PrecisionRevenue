{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018", "dom"],
    "outDir": "./dist",
    "types": ["node"],
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@server/*": ["server/*"],
      "@client/*": ["client/*"],
      "@shared/*": ["shared/*"]
    },
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "src/**/*",
    "server/**/*",
    "client/**/*",
    "shared/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
